<%= simple_form_for(@applicant, defaults: { :disabled => @applicant.locked }, :input_html => {:class => 'form-horizontal', :role => 'form' }, url: {:controller => :positions, :action => :save}) do |f| %>
<div class="row">
<div class="col-md-4">
  <fieldset>
    <legend>
      <%= t('position.personal_info') %>
    </legend>
    <div class="form-group">
    <%= f.input :firstname, :input_html => {
      :class => 'span5 form-control',
      :placeholder => t('person.first_name')
    } %>
    </div>
    <div class="form-group">
    <%= f.input :lastname, :input_html => {
      :class => 'span5 form-control',
      :placeholder => t('person.last_name')
    } %>
    </div>
    <% if selected_first_position %>
      <div class="form-group">
        <%@birthday_years = birthday_years? %>
        <%= f.input :birthyear, :collection => @birthday_years, selected: @applicant.birthyear, :input_html => {
          :class => 'span7 form-control'
        } %>
      </div>
    <% else %>
      <div class="form-group">
        <%@birthday_years = birthday_years? %>
        <%= f.input :birthyear, :collection => @birthday_years, :input_html => {
          :class => 'span7 form-control'
        } %>
      </div>
    <% end %>
    <div class="form-group">
    <%= f.input :place_of_study, :input_html => {
      :class => 'span5 form-control',
      :placeholder => t('person.place_of_study')
    } %>
    </div>
    <div class="form-group">
    <%= f.input :mail, :input_html => {
      :type => 'email',
      :class => 'span5 form-control',
      :placeholder => t('person.email_ntnu')
    } %>
    </div>
    <div class="form-group">
    <%= f.input :phone, :input_html => {
      :type => 'tel', 
      :class => 'span5 form-control',
      :placeholder => t('person.phone_nor')
    } %>
    </div>
  </fieldset>

  <fieldset>
    <legend><%= t("position.positions") %></legend>

    <% if selected_first_position %>
    <div class="form-group">
      <%= f.input :position_id_1, :collection => @positions_collection, selected: selected_first_position, :input_html => {
        :class => 'span7 form-control'
      } %>
    </div>
    <% else %>
    <div class="form-group">
      <%= f.input :position_id_1, :collection => @positions_collection, :input_html => {
        :class => 'span7 form-control'
      } %>
    </div>
    <% end %>
    <div class="form-group">
    <%= f.input :position_id_2, :collection => @positions_collection, :input_html => {
      :class => 'span7 form-control'
    } %>
    </div>

    <div class="form-group">
    <%= f.input :position_id_3, :collection => @positions_collection, :input_html => {
      :class => 'span7 form-control'
    } %>
    </div>
</div>
</div>
<div class="row">
<div class="col-md-6">
    <legend><%= t("position.application") %></legend>
    <div class="form-group">
    <%= f.input :information, :input_html => {
      :rows => 10,
      :class => 'span7 form-control'
    } %>
    </div>

    <div class="form-group">
    <%= f.input :background, :input_html => {
    :rows => 10,
    :class => 'span7 form-control'
    } %>
    </div>

    <div class="form-group">
    <%= f.input :heardof, :input_html => {
      :rows => 10,
      :class => 'span7 form-control'
    } %>
    </div>
  </fieldset>
    <div class="form-group">
    </div>
</div>
</div>
  <% if not @applicant.locked %>
  <center><%= f.button 'submit',:value => t("position.submit"), class: "btn btn-large btn-primary" %></center>
  <% end %>
<% end %>

