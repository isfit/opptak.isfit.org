<html class="no-js" lang="no"> <!--<![endif]-->

<head>
  <title>ISFiT 2015</title>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= yield :meta %>
  <meta name="description" content="ISFiT 2015 is the worlds largest international student festival. Trade Your Ideas."/>
  <meta name="og:description" content="ISFiT 2015 is the worlds largest international student festival. Trade Your Ideas."/>
  <meta name="viewport" content="width=device-width">
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />

  <meta content="hello world">
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
  <%= csrf_meta_tag %>
  <script type="text/javascript">
  var _gaq = _gaq || [];
  var pluginUrl =
 '//www.google-analytics.co.uk/plugins/ga/inpage_linkid.js';
  _gaq.push(['_require', 'inpage_linkid', pluginUrl]);
  _gaq.push(['_setAccount', 'UA-18016792-10']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();
  </script>

  <!-- Typekit fonts. Yes, these are supposed to live in the head... -->
  <script type="text/javascript" src="https://use.typekit.com/piu2mrs.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <%=yield :head%>
</head>

<body>

  <div class="content-wrapper">
  
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/nb_NO/all.js#xfbml=1&appId=111446192243028";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>


    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to image_tag("Isfit2015veldigliten.jpg"), "http://isfit.org", class: "navbar-brand" %>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="nav-link"><%= link_to "Stillinger", positions_path %></li>
              <% if current_user.nil? %>
                <li class="nav-link">
                  <%= link_to "Søknadsskjema", apply_positions_path %>
                </li>
              <% else %>
                <li class="nav-link">
                  <%= link_to "Din søknad", applicant_user_path(current_user.id)%>
                </li>
              <% end %>
            </ul>
          <% if current_user.nil? %>
            <%= simple_form_for(:signin, url: signin_path, method: "POST", :defaults => { :input_html => { :class => "form-control" } },  :html => { :class => "navbar-form navbar-right" }) do |f| %>

              <div class="form-group">
                <%= f.input :mail, placeholder: "Epost", label: false %>
              </div>
              <div class="form-group">
                <%= f.input :password, placeholder: "Passord", label: false %>
              </div> 

              <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
            <% end %>
          <% else %>
            

            <p class="navbar-text navbar-right">
            Logged in as 
            <% if current_user.applicant.nil? %>
              <%= current_user.mail %>
            <% else %>
              <%= current_user.applicant.full_name %>
            <% end %> 
            | <%= link_to "Logout" , logout_path %>
            </p>
          <% end %>
        </div><!--/.navbar-collapse -->
      </div>
    </div>



  <div class="container">
    <!-- TODO sett inn notice og warnings her. Se på internal -->
    <% if notice or alert %>
    <div class="row">
      <div class="alert alert-<%= notice ? "success":"error" %>">
        <a href="#" class="close" data-dismiss="alert">x</a>
        <strong><%= notice ? notice : raw(alert) %></strong>
      </div>
    </div>
    <% end %>
    <div id="main-header">
        <%= yield :header %>
    </div>
    

    <div role="main" class="row"> <!-- Start main -->
      <div id="content" class="span8"><!-- Start header (span12) -->
        <%= yield %>
      </div><!-- Slutt header -->

      <aside id="sidebar" class="span4"><!-- Start hoyreramme -->

        <%= yield :sidebar %>

     <div class="promotional">
    </div>


      </aside><!-- Slutt hoyreramme -->


    </div><!-- End main -->

  </div>
  </div>


    <div class="row">
      <footer class="main-footer span12"><!-- Start footer -->
      <%=link_to(image_tag("isfitliten.png", :class=>"footer-logo"), root_path)%>
      <p>
      <%= t("footer.editor") %>: Jonas Helland, jonas.helland[at]isfit.org. <br />
      <%= t("footer.copyright") %>
      </p>
      </footer><!-- End footer -->
    </div>

  <!-- JavaScript at the bottom for fast page loading -->

  <!-- Grab Google CDN's jQuery, with a protocol relative URL; fall back to local if offline -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="js/libs/jquery-1.7.1.min.js"><\/script>')</script>


  <%= javascript_include_tag 'application'%>
  <%= yield :script %>
</body>
</html>
